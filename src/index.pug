doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title Awesome Startup Employee Directory

    link(rel='icon', href='/favicon.ico')
    meta(name='description', content='Awesome Startup Employee Directory')
    link(rel='stylesheet', href='styles.css')

    script(src='app.js', type='module')

  body

    main

      header

        h1 Awesome Startup Employee Directory

        section

          h2 Employees Search

          select(name='nationality')
            option(value='' selected) Random Country
            option(value='au') Australia
            option(value='ca') Canada
            option(value='gb') United Kingdom
            option(value='us') United States

          select(name='gender')
            option(value='' selected) Random Gender
            option(value='male') Males Only
            option(value='female') Females Only

          input(type='search', name='q', placeholder='Search employees by name...', aria-label='Search employees by name', autocomplete='on', spellcheck='false', maxlength='32',  pattern='[A-Za-z ]*')

      section

        h2 Employee Search Results
